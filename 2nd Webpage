<script>
  $(document).ready(function () {
    $('#login').hover(
      function () { //Hover in
        $(this).css('background-color', 'rgb(0, 55, 255)');
      },
      function () { //Hover out
        $(this).css('background-color', 'rgb(43, 0, 255)');
      }
    )
    $('#carouselExampleAutoplaying').hover(
      function () {
        $('.carousel-control-prev').animate({
          opacity: 1,
        }, 300)
        // $('#carousel-inner').css('box-shadow', '0,0,10px,5px,black,10px');

        $('.carousel-control-next').animate({
          opacity: 1
        }, 300)
      },
      function () {
        $('.carousel-control-prev').animate({
          opacity: 0
        }, 300)
        $('.carousel-control-next').animate({
          opacity: 0
        }, 300)
      }
    )
    
  })
  const typedText = document.getElementById("change");
    const textArray = ["Online", "Reliable", "Loved", "Affordable"];
    let textArrayIndex = 0;
    let i = 0;

    function typeText(){
        if(i < textArray[textArrayIndex].length){
            typedText.textContent += textArray[textArrayIndex].charAt(i);
            i++;
            setTimeout(typeText, 200);
        }
        else{
            setTimeout(eraseText, 1000);
        }
    }
    function eraseText(){
        if(i > 0){
            typedText.textContent = textArray[textArrayIndex].substring(0, i-1);
            i--;
            setTimeout(eraseText, 50);
        }
        else{
            textArrayIndex++;
            if (textArrayIndex >= 4) {
                textArrayIndex = 0; // Loop back to the first text
            }
        setTimeout(typeText, 500); // Wait before typing the next text
        }
    }
    document.addEventListener("DOMContentLoaded", function(){
        setTimeout(typeText, 1000);
    })

</script>
